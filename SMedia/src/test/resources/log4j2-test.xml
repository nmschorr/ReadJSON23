<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="[%-5level] %d{yyyyMMdd-HHmmss} [%t] %c{1}- %msg%n" />
		</Console>
		<File name="MyFile" fileName="./logs/smout.log" immediateFlush="false"
			append="false">
			<PatternLayout
				pattern="%d{yyyy-MMdd-HH:mm:ss} [%t] %-5level %logger{36}- %msg%n" />
		</File>
	</Appenders>
	
	<Loggers>
		<Root level="all" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="MyFile" />
		</Root>
	</Loggers>
</Configuration>